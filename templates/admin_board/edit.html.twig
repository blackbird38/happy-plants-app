{% extends 'base.html.twig' %}

{% block title %}Hello AdminBoardController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% include('navbar.html.twig') %}
    <div class="example-wrapper">
        <h2>Admin panel > Users > Edit user</h2>
        {% form_theme userForm'bootstrap_4_layout.html.twig' %}
        {{ form_start(userForm) }}
        {{ form_row(userForm.name) }}
        {{ form_row(userForm.last_name) }}
        {{ form_row(userForm.phone) }}
        {{ form_row(userForm.email) }}
        {{ form_row(userForm.photo) }}
        {{ form_row(userForm.created_at) }}
        <button class="btn btn-success">Update</button>
        {{ form_end(userForm) }}
    </div>
{% endblock %}