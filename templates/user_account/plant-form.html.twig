<div class="col-md-12">
    {% form_theme plantForm'bootstrap_4_layout.html.twig' %}
        {{ form_start(plantForm, {'attr': {'id': 'plant_form'}}) }}
                {{ form_errors(plantForm) }}
                {{ form_row(plantForm.name) }}
                {{ form_row(plantForm.id_species) }}
                {{ form_row(plantForm.id_medium) }}
                {{ form_row(plantForm.id_stage) }}
                {{ form_row(plantForm.birth_date) }}
                {{ form_row(plantForm.photoFile, {
                    attr:{
                        placeholder:'Select the image'
                    }
                }) }}
                {% do plantForm.id_place.setRendered() %} {#https://stackoverflow.com/a/48147298#}
                {% include('user_account/plant-cropper.html.twig') %}
                {% if edit == false %}
                        <button class="btn happy-background text-white float-right mt-3">Add new</button>
                {% else %}
                        <button class="btn happy-background text-white float-right mt-3">Update</button>
                {% endif %}
        {{ form_end(plantForm) }}
    {#, {'render_rest': false}#}
</div>